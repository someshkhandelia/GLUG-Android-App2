<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/dim_foreground_disabled_material_light">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="We believe that software should be free.We encourage the use of FOSS(Free and Open Source Software)"
    android:id="@+id/textView4"
    android:layout_alignParentTop="true"
    android:textSize="20sp"
    android:textColor="#ffffff"
    android:layout_marginTop="50dp"
    android:gravity="center"
    android:textStyle="italic"
    android:layout_centerHorizontal="true" />

<ImageView
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:id="@+id/HomeImage3"
    android:layout_below="@+id/textView4"
    android:layout_centerHorizontal="true"
    android:src="@drawable/tuxwelcome2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:background="@color/accent_material_light"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/contactusbutton"/>
</RelativeLayout>