<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_foreground_disabled_material_light">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Throughout the year we conduct various free workshops.\n'MUKTI' is our annual fest where we promote FOSS. "
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textView5"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="0.1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/left_arrow_2"
            android:alpha="0.7"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="0.5"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/tuxwelcome"
            android:id="@+id/online_image_button"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="0.1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/right_arrow_2"
            android:alpha="0.7"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MUKTI"
        android:background="@color/accent_material_light"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/muktibutton"/>
</RelativeLayout>